
public class practice01 {
	public static void main(String[] args) {
		
		//問1 1~10のうち偶数のみを昇順で表示させる
		for (int i =1; i <= 10; i++) {
			if (i % 2 == 0) {
				System.out.println(i);
			}
		}
		
		//問2 1~10までに偶数が何個あるか、また、偶数の合計は幾つになるか表示させる
		int c = 0;
		int s =0;
		for (int i =1; i <= 10; i++) {
			if (i % 2 == 0) {
				c++;
				s += i;
			}
		}
		System.out.println(c);
		System.out.println(s);
		
		//問3 1~10までの整数をカンマ区切りで横並びに表示させる
		for (int i = 1; i <= 20; i++) {
			if (i == 20) {
				System.out.println(i);
			} else {
				System.out.print(i + ",");
			}
		}
		
	}
}
