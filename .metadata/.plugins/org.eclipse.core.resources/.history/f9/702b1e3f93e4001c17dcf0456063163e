
public class practice01 {
	public static void main(String[] args) {
		
		//問1 1~10のうち偶数のみを昇順で表示させる
		for (int i =1; i <= 10; i++) {
			if (i % 2 == 0) {
				System.out.println(i);
			}
		}
		
		//問2 1~10までに偶数が何個あるか、また、偶数の合計は幾つになるか表示させる
		int c = 0;
		for (int i =1; i <= 10; i++) {
			if (i % 2 == 0) {
				c++;
			}
		}
		System.out.println(c);
		
		int s = 0;
		for (int i = 0; i <= 10; i++) {
			if (i % 2 == 0) {
				s += i;
			}
		}
		System.out.println(s);
	}

}
