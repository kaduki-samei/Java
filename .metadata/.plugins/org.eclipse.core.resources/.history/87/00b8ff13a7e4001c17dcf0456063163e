
public class practice01 {
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		//問1 1~10のうち偶数のみを昇順で表示させる
		for (int i =1; i <= 10; i++) {
			if (i % 2 == 0) {
				System.out.println(i);
			}
		}
		
		//問2 1~10までに偶数が何個あるか、また、偶数の合計は幾つになるか表示させる
		int c = 0;
		int s =0;
		for (int i =1; i <= 10; i++) {
			if (i % 2 == 0) {
				c++;
				s += i;
			}
		}
		System.out.println(c);
		System.out.println(s);
		
		//問3 1~10までの整数をカンマ区切りで横並びに表示させる
		for (int i = 1; i <= 10; i++) {
			if (i == 10) {
				System.out.println(i);
			} else {
				System.out.print(i + ",");
			}
		}
		
		//問4 要素数20の配列を宣言し、要素に0から5ずつ加算して代入させる
		//　　[0]~[10]の奇数のみカンマ区切りで、[11]~[19]の値は偶数をカンマ区切りで表示させる
		int[] array = new int[20];
		int plus = 5;
		for (int i = 1; i < 20; i++) {
			array[i] += plus;
			plus += 5;
		}
		for (int index1 = 0; index1 <= 10; index1++) {
			if (index1 % 2 == 0) {
				continue;
			}
			System.out.print(array[index1] + ",");
		}
		for (int index2 = 11; index2 > 10; index2++) {
			if (index2 % 2 == 0) {
				System.out.print(array[index2] + ",");
			} else if (index2 == 19) {
				System.out.print(array[index2]);
			}
		}
		//分からない
	}
}
